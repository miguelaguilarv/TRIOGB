<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Gato.TablaPuntajes">


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="416dp"
        android:layout_height="728dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="416dp"
            android:layout_height="33dp"
            android:background="#000000"
            android:orientation="vertical">


            <TextView
                android:id="@+id/inf_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/triogb"
                android:text="¡¡¡GANADOR!!!"
                android:textColor="#FF0000"
                android:textSize="34sp">


            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="416dp"
            android:layout_height="33dp"
            android:background="#000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inf_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/triogb"
                android:textColor="#FF0000"
                android:textSize="34sp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="416dp"
            android:layout_height="33dp"
            android:background="#000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/puntaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/triogb"
                android:textColor="#E3AF2A"
                android:textSize="34sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearL"
            android:layout_width="match_parent"
            android:layout_height="564dp"
            android:background="#000000"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewRecord"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:fontFamily="@font/triogb"
                android:gravity="center"
                android:text="¡¡NUEVO RECORD!!"
                android:textColor="#51FF07"
                android:textSize="40dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:fontFamily="@font/triogb"
                android:gravity="center"
                android:text="MEJOR PUNTAJE"
                android:textColor="#51FF07"
                android:textSize="23dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ptos"
                android:layout_width="match_parent"
                android:layout_height="241dp"
                android:gravity="center"
                android:text=""
                android:textColor="#51FF07"
                android:textSize="150dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="65dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4">
        <Button
            android:id="@+id/button3"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#FF0016"
            android:fontFamily="@font/triogb"
            android:onClick="salir_home"
            android:text="SALIR"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>