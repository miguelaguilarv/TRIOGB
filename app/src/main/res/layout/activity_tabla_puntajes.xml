<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Gato.TablaPuntajes">


    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="728dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="416dp"
            android:layout_height="33dp"
            android:background="#000000"
            android:orientation="vertical">


            <TextView
                android:id="@+id/inf_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/triogb"
                android:text="¡¡¡GANADOR!!!"
                android:textColor="#FF0000"
                android:textSize="34sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="416dp"
            android:layout_height="33dp"
            android:background="#000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inf_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/triogb"
                android:textColor="#FF0000"
                android:textSize="34sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/inf_1"
            tools:ignore="MissingConstraints">

            <TableLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="49dp">

                    <Button
                        android:id="@+id/reiniciar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="164dp"
                        android:backgroundTint="#A3ED62"
                        android:fontFamily="@font/triogb"
                        android:onClick="rein"
                        android:text="NIVEL 2"
                        android:textColor="#2664CF"
                        android:textSize="20dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_salir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="164dp"
                        android:backgroundTint="#DF62ED"
                        android:fontFamily="@font/triogb"
                        android:onClick="puntajes"
                        android:text="PUNTAJES"
                        android:textColor="#2664CF"
                        android:textSize="20dp" />
                    />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="164dp"
                        android:backgroundTint="#ED626E"
                        android:fontFamily="@font/triogb"
                        android:onClick="salir_home"
                        android:text="SALIR"
                        android:textColor="#2664CF"
                        android:textSize="20dp" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>