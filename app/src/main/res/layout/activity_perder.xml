<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Ordenamiento.perderActivity">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="104dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-2dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/inf_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#FF0000"
            android:fontFamily="@font/triogb"
            android:text="Cargando..."
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="418dp"
        android:layout_height="470dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="108dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/nuevo_Record"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:fontFamily="@font/triogb"
            android:gravity="center_horizontal"
            android:text="Perdiste,te quedaste sin vidas."
            android:textColor="#51FF07"
            android:textSize="35dp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="581dp"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/buttonAtras2"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:fontFamily="@font/triogb"
            android:text="SALIR"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>