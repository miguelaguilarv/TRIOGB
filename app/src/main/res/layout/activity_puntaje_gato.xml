<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gato.PuntajeGato">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#82A4FA"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="203dp"
        android:layout_height="119dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63">

        <Button
            android:id="@+id/reiniciar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#A3ED62"
            android:fontFamily="@font/triogb"
            android:onClick="rein"
            android:text="REINICIAR"
            android:textColor="#2664CF"

            android:textSize="20dp" />


        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginEnd="164dp"
            android:backgroundTint="#ED626E"
            android:fontFamily="@font/triogb"
            android:onClick="salir_home"
            android:text="SALIR"
            android:textColor="#2664CF"
            android:textSize="20dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="412dp"
        android:layout_height="378dp"
        android:src="@drawable/med"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/empate"
        android:layout_width="412dp"
        android:layout_height="378dp"
        android:src="@drawable/empate2"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inf_ganador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/triogb"
        android:text=""
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout6"
        app:layout_constraintTop_toTopOf="@+id/linearLayout6" />


</androidx.constraintlayout.widget.ConstraintLayout>