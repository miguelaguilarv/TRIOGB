<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Breakout.PuntajeBreakout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="#060817"
        tools:ignore="MissingConstraints" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/triogb"
                android:text="Hola"
                android:gravity="center"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/textViewRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/triogb"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Ganaste!"
                android:textSize="30dp"/>


            <TextView
                android:id="@+id/textViewScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/triogb"
                android:layout_marginTop="40dp"
                android:text="Puntaje"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/textViewRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/triogb"
                android:textColor="#FFC107"
                android:visibility="invisible"
                android:layout_marginTop="40dp"
                android:text="¡¡¡NUEVO RECORD PERSONAL!!!"
                android:textSize="30dp"/>





            <Button
                android:id="@+id/btnBackBO"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:backgroundTint="#8BC34A"
                android:text="Salir"
                android:fontFamily="@font/triogb"
                android:textStyle="bold"
                android:textColor="#2664CF" />


            />



        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>